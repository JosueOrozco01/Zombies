@startuml
' Diagrama de Secuencia: ConfiguraciÃ³n de Audio
actor Usuario
participant "SettingsMenuAdaptado" as UI
participant "AudioService" as AS
participant "AudioSettingsRepository" as AR
participant "AudioSourceManager" as AM

Usuario -> UI: Ajusta Slider
activate UI

UI -> AS: SetVolume("disparo", 0.8f)
activate AS

AS -> AR: SaveVolume("disparo", 0.8f)
activate AR
AR -> AR: PlayerPrefs.SetFloat()
AR --> AS: ok
deactivate AR

AS -> AM: GetComponent<AudioSource>()
activate AM
AM --> AS: source
deactivate AM

AS -> AS: source.volume = 0.8f
AS --> UI: ok

deactivate AS
deactivate UI

@enduml